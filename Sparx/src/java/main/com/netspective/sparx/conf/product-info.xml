<?xml version="1.0"?>

<netspective>
    <product id="netspective-sparx" version="7">
        <dependencies>
            <product id="netspective-commons"/>
            <product id="netspective-axiom"/>

            <library>
                <name>Sun Microsystems Java Servlet API</name>
                <version>2.3</version>
                <class-path>servlet.jar</class-path>
                <source home-uri="http://java.sun.com"
                    license="Sun Microsystems"/>
            </library>

            <library>
                <name>Ostermiller Syntax Highlighting Library</name>
                <version>1.1.1</version>
                <class-path>syntax.jar</class-path>
                <source home-uri="http://ostermiller.org/syntax"
                    license="GNU GPL"
                    license-uri="http://ostermiller.org/syntax/license.html"/>
            </library>

            <library>
                <name>FreeMarker Templating Library</name>
                <version>2.3</version>
                <class-path>freemarker.jar</class-path>
                <source home-uri="http://www.freemarker.org"
                    license="BSD, OSI Certified"/>
            </library>

            <library>
                <name>HttpUnit Servlet Unit Testing Library</name>
                <version>1.5.4</version>
                <class-path>httpunit.jar</class-path>
                <source home-uri="http://httpunit.sourceforge.net/"
                    license="Open Source, Free, Custom License"/>
            </library>

            <library>
                <name>Rhino JavaScript Library</name>
                <version>1.5R4+ (patched for HttpUnit)</version>
                <class-path>js.jar</class-path>
                <source home-uri="http://httpunit.sourceforge.net/"
                    license="Mozilla Public License"/>
            </library>

            <library>
                <name>TJidy HTML Syntax Checker Library</name>
                <version>04aug2000r7</version>
                <class-path>jtidy.jar</class-path>
                <source home-uri="http://lempinen.net/sami/jtidy/"
                    license="Open Source, Free, Custom License"/>
            </library>

            <library>
                <name>NekoHTML HTML Scanner Library</name>
                <version>0.8.1</version>
                <class-path>nekohtml.jar</class-path>
                <source home-uri="http://www.apache.org/~andyc/neko/doc/html/"
                    license="CyberNeko Software License"
                    license-uri="http://www.apache.org/~andyc/neko/LICENSE"/>
            </library>

            <library>
                <name>jWebUnit Simplified web testing API for HttpUnit</name>
                <version>1.1.1</version>
                <class-path>jwebunit.jar</class-path>
                <source home-uri="http://jwebunit.sourceforge.net/"
                    license="Open Source, Free, Custom License"/>
            </library>

            <library>
                <name>Jakarta Lucene Full Text Search API</name>
                <version>1.4</version>
                <class-path>lucene.jar</class-path>
                <source home-uri="http://jakarta.apache.org/lucene"
                    license="Apache Software License"
                    license-uri="http://www.apache.org/LICENSE"/>
            </library>
        </dependencies>
    </product>
</netspective>
