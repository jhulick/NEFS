                            <panel class="com.netspective.sparx.console.panel.presentation.dialogs.DialogsCatalogClassesPanel"/>
                        </panels>
                    </panels>
                </page>
                <page name="unit-test" caption="Unit Test" heading="simple-expr:Dialog: ${request:selected-dialog-id}" command="dynamic,simple-expr:dialog,${request:selected-dialog-id}"/>
