
<project default="clear-classes-and-resources">

    <property name="frameworks-root-dir" value="c:/Projects/Frameworks"/>
    <property name="classes-dest-dir" value="${frameworks-root-dir}/tools/idea/classes"/>

    <target name="copy-resources">

        <!-- copy configuration files into the output directory, too, so that Resin has access to them -->
        <!-- <fail message="If you get the latest copy of WEB-INF/web.xml you will see this is no longer needed, talk to Shahid."/> -->

        <copy todir="${classes-dest-dir}">
            <fileset dir="${frameworks-root-dir}/Commons/src/java/main">
                <include name="**/*.xml"/>
                <include name="**/*.properties"/>
            </fileset>
            <fileset dir="${frameworks-root-dir}/Axiom/src/java/main">
                <include name="**/*.xml"/>
                <include name="**/*.properties"/>
            </fileset>
            <fileset dir="${frameworks-root-dir}/Sparx/src/java/main">
                <include name="**/*.xml"/>
                <include name="**/*.ftl"/>
                <include name="**/*.properties"/>
            </fileset>
        </copy>

    </target>

    <target name="clear-classes-and-resources">

        <delete dir="${classes-dest-dir}"/>
        <mkdir dir="${classes-dest-dir}"/>

    </target>

</project>