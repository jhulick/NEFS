<xdm:container xmlns:xdm="http://www.netspective.org/Framework/Commons/XMLDataModel">

    <!--
      ***************************************************************************
      * Rreport column calculators that can be used by tabular report columns.  *
      ***************************************************************************
     -->
    <tabular-report-calc-type class="com.netspective.commons.report.tabular.calc.ColumnSumCalculator"/>
    <tabular-report-calc-type class="com.netspective.commons.report.tabular.calc.ColumnCountCalculator"/>

    <!--
      **********************************************************************************************************
      * Report column type template (XDM template producers) that can be inherited by tabular report columns.  *
      **********************************************************************************************************
     -->
    <tabular-report-column-type name="general" class="com.netspective.commons.report.tabular.column.GeneralColumn"/>
    <tabular-report-column-type name="numeric" class="com.netspective.commons.report.tabular.column.NumericColumn"/>
    <tabular-report-column-type name="decimal" class="com.netspective.commons.report.tabular.column.DecimalColumn"/>

</xdm:container>
